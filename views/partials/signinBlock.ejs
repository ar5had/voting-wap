<div class="boxWrapper">
    <div class="container box">
    	<div class="col-xs-12 text-center">
    		<h2>Log Into Your Account</h2>
    		<p class="description">You can use any of the below services to log in.</p>
    	</div>
    	<div class="signinBlock col-xs-12">
    		<div class="col-xs-12 text-center btnWrapper fbBtnWrapper">
    			<a href="/auth/facebook">
    			    <button id="fbBtn">
    					<i class="fa fa-facebook" aria-hidden="true"></i>
    					Facebook
    			    </button>
    			</a>
    		</div>
    		<div class="col-xs-12 text-center btnWrapper twitterBtnWrapper">
    			<a href="/auth/twitter">
    			    <button id="twitterBtn">
    					<i class="fa fa-twitter" aria-hidden="true"></i>
    					Twitter
    			    </button>
    			</a>
    		</div>
    		<div class="col-xs-12 text-center btnWrapper googleBtnWrapper">
    			<a href="/auth/google">
    			    <button id="googleBtn">
    					<i class="fa fa-google-plus" aria-hidden="true"></i>
    					Google
    			    </button>
    			</a>
    		</div>
    		<div class="col-xs-12 text-center btnWrapper githubBtnWrapper">
    			<a href="/auth/github">
    			    <button id="githubBtn">
    					<i class="fa fa-github" aria-hidden="true"></i>
    					Github
    			    </button>
    			</a>
    		</div>
    	</div>
    </div>
</div>

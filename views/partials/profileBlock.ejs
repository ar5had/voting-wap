<div class="boxWrapper">
    <div class="container box profileBox">
    	<div class="col-xs-12 text-center profilePictureWrapper marB20 marT10">
    		<img class="profilePicture" src="<%= img %>" class="navIcons" alt="Profile Picture"/>
    	</div>
    	<div class="col-xs-12 marB30"><h2 class="text-center">Arshad Khan</h2></div>
    	<div class="col-xs-12 text-center userPollsInfo marB20">
    		<p>Polls created:  <span class="pollCreatedCount"><%= pollsCreated %></span></p>
    		<p>Polls voted: <span class="pollVotedCount"><%= pollsVoted %></span></p>
    	</div>
    	<div class="col-xs-12 text-center">
    		<a href="/logout">
    			<button class="logoutBtn">Logout</button>
    		</a>
    	</div>
    	<div class="col-xs-12 text-center">
    		<a href="/deleteAccount">
    			<button class="deleteAccBtn" id="deleteAccBtn">Delete Account</button>
    		</a>
    	</div>
    </div>
</div>

